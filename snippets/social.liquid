<div id="social">
  <div class="share-icons">
    <a href="//www.facebook.com/sharer.php?u={{ shop.url | append: share_permalink }}{% if template == 'blog' or template == 'article' %}{{ article.url }}{% else %}{{ product.url }}{% endif %}" class="facebook" target="_blank">
      <i class="fab fa-facebook"></i>
    </a>
    <a title="{{ 'social.icons.twitter' | t }}"  href="//twitter.com/intent/tweet?text={{ shop.url | append: share_permalink }}{% if template contains 'blog' or template == 'article' %}{{ article.url }}{% else %}{{ product.url }}{% endif %}" title="Share on Twitter" target="_blank" class="twitter"><i class="fab fa-twitter la-2x" aria-hidden="true"></i></a>
    {% if template == 'collection' or template == 'product' or template == 'index' %}
      <a title="{{ 'social.icons.pinterest' | t }}" target="blank" href="//pinterest.com/pin/create/button/?url={{ shop.url | append: share_permalink }}{{ product.url }}&amp;media={{ product.featured_media | img_url: '1024x1024' | prepend: 'http:' }}" title="Pin This Product" class="pinterest"><i class="fab fa-pinterest la-2x" aria-hidden="true"></i></a>
    {% endif %}

    {% if template contains 'blog' or template contains 'article' %}
      {% if article.image %}
        <a title="{{ 'social.icons.pinterest' | t }}" target="blank" href="//pinterest.com/pin/create/button/?url={{ shop.url | append: share_permalink }}{{ article.url }}&amp;media={{ article.image.src | img_url: 'grande' | prepend: 'http:' }}" title="Pin This Article" class="pinterest"><i class="fab fa-pinterest"></i></a>
      {% endif %}
    {% endif %}
  </div>
</div>
