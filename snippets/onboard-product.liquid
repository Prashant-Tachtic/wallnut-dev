{% comment %}Used for home page sections only when featured products is chosen but no content has been selected{% endcomment %}

{% for i in (1..product_limit) %}
  {% capture current %}{% cycle 1, 2, 3, 4, 5, 6 %}{% endcapture %}
  {%- assign placeholder = 'product-' | append: current -%}
  <div class="product-index {{ grid_item_width }}" data-alpha="{{ product.title }}" data-price="{{ product.price }}" data-aos="{{ settings.scroll_animation }}">
    <div class="onboard">
      {{ placeholder | placeholder_svg_tag }}
    </div>
    <div class="product-info">
      <a href="{{ product.url | within: collection }}">
        <div class="prod-title">Sample product</div>
      </a>
      <div class="price">
        <div class="prod-price">9.99</div>
      </div>
    </div>
  </div>
{% endfor %}
